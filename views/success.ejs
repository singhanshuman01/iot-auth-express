<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/userDashboard.css">
    <link rel="shortcut icon" href="favicon/images.png" type="image/x-icon">
    <title>User Dashboard</title>
</head>

<body>
    <div class="box">
        <% if (!isUsing) { %>
         <form action="/start-charging" method="post" id="start-charging-form" class="charge-form">

            <input type="radio" name="time" id="time-5" value="5" required>
            <label for="time-5">5min</label>

            <input type="radio" name="time" id="time-10" value="10">
            <label for="time-10">10min</label>

            <input type="radio" name="time" id="time-15" value="15">
            <label for="time-15">15min</label> <br>

            <input type="radio" name="relay" id="rel1" value="0" required <% if(relays[0]=="on"){ %> disabled <% } %>>
            <label for="rel1">Relay 1</label>

            <input type="radio" name="relay" id="rel2" value="1" <% if(relays[1]=="on"){ %> disabled <% } %>>
            <label for="rel2">Relay 2</label>

            <label for="btn">Start Charging</label>
            
            <input type="submit" value="⚡">
        </form>
        <% }else{ %>
        <form action="/stop-charging" method="post" id="stop-charging-form" class="charge-form">
            <label for="btn">Stop Now</label>
            <input type="submit" value="o">
        </form>
        <% } %>
    </div>

    <div class="logs">
        <table>
            <thead>
                <th>Sr.no.</th>
                <th>Date</th>
                <th>Time Period</th>
            </thead>
            <tbody>
                <% for( let i = 0; i < logs.length; i++ ) { %>
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= logs[i].time_stamp %></td>
                    <td><%= logs[i].time_period %> min</td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <form action="/logout" method="post">
        <button type="submit" class="logout-btn">Logout</button>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const box = document.querySelector('div.box');
        
        function fn(){
            const form = document.querySelector("form.charge-form");
            form.addEventListener('submit', (e)=>{
            // e.preventDefault();
            if(form.id == "start-charging-form") {
                const formdata = Object.fromEntries(new FormData(form));
                console.log(formdata);
                socket.emit("start-charging", formdata.relay,formdata.time);
            }
            else if(form.id == "stop-charging-form") socket.emit("stop-charging");
        });
        }
        fn();

        socket.on('charge-stopped', ()=>{
            box.innerHTML = `<form action="/start-charging" method="post" id="start-charging-form" class="charge-form">

            <input type="radio" name="time" id="time-5" value="5" required>
            <label for="time-5">5min</label>

            <input type="radio" name="time" id="time-10" value="10">
            <label for="time-10">10min</label>

            <input type="radio" name="time" id="time-15" value="15">
            <label for="time-15">15min</label> <br>

            <input type="radio" name="relay" id="rel1" value="0" required <% if(relays[0]=="on"){ %> disabled <% } %>>
            <label for="rel1">Relay 1</label>

            <input type="radio" name="relay" id="rel2" value="1" <% if(relays[1]=="on"){ %> disabled <% } %>>
            <label for="rel2">Relay 2</label>

            <label for="btn">Start Charging</label>
            
            <input type="submit" value="⚡">
        </form>`;
        fn();
        });

        socket.on('charge-started', (time)=>{
            box.innerHTML = `<form action="/stop-charging" method="post" id="stop-charging-form" class="charge-form">
            <label for="btn">Stop Now</label>
            <input type="submit" value="o">
        </form>`;
        fn();
        
        // setTimeout(()=>{
        //     socket.emit('stop-charging');
        // }, time);
        });

        socket.on('rate-exceeded', ()=>{
            box.innerHTML = `Too many attempts, retry after a minute`;
            setTimeout(()=>window.location.reload(), 60*1000);
        });

        socket.on('block-relay', relnum=>{
            console.log('block relay was emitted', relnum);
            let i;
            if(relnum==0) i = document.getElementById('rel1');
            else i = document.getElementById('rel2');
            i.setAttribute("disabled", 'true');
        });

    </script>
</body>

</html>


